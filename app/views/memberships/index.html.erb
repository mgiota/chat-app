<h3><%= link_to "go to #{@room.topic}", room_path(@room) %></h3>
<h2>Add members to <%=@room.topic %></h2>

<h4>Current members</h4>
<ul id="member-list">
  <% @memberships.each do |member| %>
    <li><%= member.email %></li>
  <% end %>
</ul>

<h4>Add members</h4>
<ul id="add-users">
  <!-- <%= form_for([@room, @room.memberships.build], remote: true, method: "post") do |f| %> -->
    <% @users.each do |user| %>
        <li>
          <%= user.email %>
          <input type="checkbox" id="<%= "#{user.id}-add-member" %>"/>
        </li>
      <% end %>
  <!-- <% end %> -->
</ul>
