<h3><%= link_to "go to #{@room.topic}", room_path(@room) %></h3>
<h2>Add members to <%=@room.topic %></h2>

<h4>Current members</h4>
<ul id="member-list">
  <% @memberships.each do |member| %>
    <%= render member %>
  <% end %>
</ul>

<h4>Add members</h4>
<ul id="add-users">
  <%= form_for([@room, @room.memberships.build], remote: true) do |f| %>
    <% @users.each do |user| %>
      <li id="<%= "#{user.id}-add-member" %>">
          <%= user.email %>
          <%= f.check_box :user_id %>
          <!-- <input type="checkbox" id="<%= "#{user.id}-add-member" %>"/> -->
        </li>
      <!-- <% end %> -->
      <p>
       <%= f.submit "Submit", class: 'btn btn-success' %>
      </p>
  <% end %>
</ul>
