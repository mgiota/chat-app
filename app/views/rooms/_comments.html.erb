<div class="topic-comment">
  <% @comments.each do |comment| %>
    	<div class="comment">
      	<p><%= comment.user.first_name %> <br>
      	<small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
      	<p class="comment-body"><%= comment.body %></p>
      </div>
  <% end %>
</div>